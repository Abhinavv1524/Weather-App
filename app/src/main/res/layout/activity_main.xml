<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg9"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Get weather detail of any City"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/etCityName"
        android:layout_below="@id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter city name"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:alpha="0.4"/>

    <Button
        android:id="@+id/btnGetWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etCityName"
        android:layout_marginTop="16dp"
        android:backgroundTint="#5C6BC0"
        android:text="Get Weather"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/WeatherCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvWeather"
        android:layout_marginTop="1dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"/>


    <TextView
        android:id="@+id/tvWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnGetWeather"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:textSize="37sp"
        android:textStyle="normal"
        android:text="Location"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/WeatherTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/WeatherCity"
        android:layout_marginTop="1dp"
        android:textColor="@android:color/white"
        android:textSize="100sp"
        android:textStyle="normal"
        android:padding="0sp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/WeatherDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/WeatherTemp"
        android:layout_marginTop="0dp"
        android:textColor="@android:color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

</RelativeLayout>